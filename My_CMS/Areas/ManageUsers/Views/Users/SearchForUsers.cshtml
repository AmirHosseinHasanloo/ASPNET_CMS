@model IEnumerable<DataLayer.Model.Users>

@{
    ViewBag.Title = "نتیجه جستجو";
}

<h2>@Model.Count() نتیجه یافت شد</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
               @item.RegisterDate.ToString("dddd, dd MMMM yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.RoleTitle)
            </td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.UserID })" class="btn btn-xs btn-warning">ویرایش</a> |
                <a href="@Url.Action("Details",new {id=item.UserID })" class="btn btn-xs btn-info">مشخصات</a> |
                <a href="@Url.Action("Delete",new {id=item.UserID })" class="btn btn-xs btn-danger">حذف</a>
            </td>
        </tr>
    }

</table>
