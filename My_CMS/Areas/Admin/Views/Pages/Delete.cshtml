@model DataLayer.Model.Pages

@{
    ViewBag.Title = "حذف اخبار";
}

<h2>حذف اخبار</h2>

<h3>آیا از حذف خبر @Model.PageTitle اطمینان دارید ؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PageTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PageTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>

        <dd>
            <img src="/Images/Thumb/@Model.ImageName" class="thumbnail" alt="Picture Of News" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Page_Groups.GroupTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Page_Groups.GroupTitle)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |      
        </div>
    }
</div>
