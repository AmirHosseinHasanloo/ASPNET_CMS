@model DataLayer.Model.Users
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ایمیل بازیابی رمز عبور</title>
</head>
<body style="font-family: fantasy, 'Segoe UI', Tahoma, sans-serif;" dir="rtl">
    <div style="text-align:center; height: 280px; width: 50%; background: linear-gradient(45deg,#05abe0 0%,#8200f4 100%);  margin: auto; border-radius: 10px; box-shadow: 0 5px 10px rgba(0,0,0,0.25);">

        <div>
            <h2 style="margin:auto; color: white;text-align: center;">ایمیل بازیابی رمز عبور حساب</h2>
            <br>
            <p style="text-align: center; color: white;"> @Model.UserName عزیز</p>
            <br>
            <p style="text-align: center; color: white;">برای بازیابی رمز عبور حساب خود روی لینک زیر کلیک کنید</p>
            <div style="background:white; border-radius:12px; height:30px; width:120px; text-align: center; margin: auto;">

                <a style="text-decoration: none" href="https://@System.Configuration.ConfigurationManager.AppSettings["MyDomain"]/Account/RecoveryPassword/@Model.ActiveCode"> بازیابی رمز عبور</a>

            </div>


        </div>

    </div>

</body>
</html>



