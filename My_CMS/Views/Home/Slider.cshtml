@model IEnumerable<DataLayer.Model.Pages>
@{
    ViewBag.Title = "اسلایدر";
}
<div class="news-slider border-radius">
    <div id="slider-one" class="owl-carousel">
        <!-- each item -->
        @foreach (var item in Model)
        {
            <div class="item">              
                    <img src="/Images/NewsImages/@item.ImageName">            
                <div class="left-side">
                    <h2> <a href="/Pages/@item.PageID">@item.PageTitle</a> </h2>
                    <p>
                       @Html.Raw(item.ShortDescription)
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار :@item.CreateDate</span>
                </div>
                <div class="clearfix"></div>
            </div>
        }
        <!-- end each item -->
    </div>
    <a href="/Home/ArchiveNews" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>