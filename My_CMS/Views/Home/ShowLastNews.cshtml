@model IEnumerable<DataLayer.Model.Pages>
@{
    ViewBag.Title = "آخرین اخبار";
}
<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>آخرین آخبار ارسالی</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/Images/NewsImages/@item.ImageName">
                <h2> <a href="/Pages/@item.PageID"> @item.PageTitle</a></h2>
                <p>
                    @Html.Raw(item.ShortDescription)
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToString("dddd, dd MMMM yyyy") </span>
                <a href="" class="more-link"><i class="icons icon-more"></i></a>
            </li>

        }
    </ul>
</section>