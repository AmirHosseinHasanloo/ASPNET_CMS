@model IEnumerable<DataLayer.Model.Pages>
@{
    ViewBag.Title = "صفحات پر بازدید";
}

<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/Images/Thumb/@item.ImageName">
                <h2> <a href="/Pages/@item.PageID">@item.PageTitle</a></h2>
                <span>انتشار : @item.CreateDate</span>
            </li>
        }
    </ul>
</section>

